#include<stdio.h>
int c=0;
char p[20];
void s();
void l();
void lprime();
void l()
{
	s();
	lprime();
}
void lprime()
{
	if(p[c]==',')
	{
		c++;
		s();
		lprime();
	}
}
void s()
{
	if(p[c]=='a')
	c++;
	else if(p[c]=='(')
	{
		c++;
		l();
		if(p[c]==')')
		c++;
		else
		c--;
	}
	else
	printf("\nInvalid Expression");
}
int main()
{
	printf("\n Implementation of RECURSIVE DESCENT PARSER\n");
	printf("\n Enter the expression:\n");
	scanf("%s",p);
	s();
	if(p[c]=='$')
	printf("\n The string is accepted");
	else
	printf("\n the string is rejected");
}
